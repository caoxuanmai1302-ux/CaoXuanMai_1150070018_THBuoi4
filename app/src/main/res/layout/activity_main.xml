<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3E0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#D81B60" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- View vô hình làm tâm vòng tròn -->
        <View
            android:id="@+id/center_guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 12 cung hoàng đạo xếp vòng tròn -->
        <ImageView
            android:id="@+id/iv_aries"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/aries"
            android:tag="0"
            android:contentDescription="Bạch Dương"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="0" />

        <ImageView
            android:id="@+id/iv_taurus"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/taurus"
            android:tag="1"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="30" />

        <ImageView
            android:id="@+id/iv_gemini"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/gemini"
            android:tag="2"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="60" />

        <ImageView
            android:id="@+id/iv_cancer"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/cancer"
            android:tag="3"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="90" />

        <ImageView
            android:id="@+id/iv_leo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/leo"
            android:tag="4"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="120" />

        <ImageView
            android:id="@+id/iv_virgo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/virgo"
            android:tag="5"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="150" />

        <ImageView
            android:id="@+id/iv_libra"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/libra"
            android:tag="6"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="180" />

        <ImageView
            android:id="@+id/iv_scorpio"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/scorpio"
            android:tag="7"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="210" />

        <ImageView
            android:id="@+id/iv_sagittarius"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/sagittarius"
            android:tag="8"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="240" />

        <ImageView
            android:id="@+id/iv_capricorn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/capricorn"
            android:tag="9"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="270" />

        <ImageView
            android:id="@+id/iv_aquarius"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/aquarius"
            android:tag="10"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="300" />

        <ImageView
            android:id="@+id/iv_pisces"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/pisces"
            android:tag="11"
            app:layout_constraintCircle="@id/center_guide"
            app:layout_constraintCircleRadius="140dp"
            app:layout_constraintCircleAngle="330" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Phần hiển thị thông tin khi chọn -->
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:elevation="12dp">

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/aries" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạch Dương"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:textColor="#D81B60" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn một cung hoàng đạo để xem thông tin..."
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />
        </ScrollView>

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xem Thêm"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D81B60"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>